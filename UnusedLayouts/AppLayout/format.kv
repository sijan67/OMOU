<JournalEntryWindow>
    name: "journal"
    journal: journal

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "How are you feeling today?"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: journal
                pos_hint: {"x":0.05, "top":0.6}
                size_hint: 0.9, 0.4
                multiline: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.75,"y":0.15}
            size_hint: 0.2, 0.05
            text: "Submit"

            on_release:
                root.submit()

<MediaSelectionWindow>
    name: "selection"
    GridLayout:
        cols:1
        size: root.width, root.height
        Label:
            text: "What kind of media are you interested in?"
        GridLayout:
            cols: 2
            rows: 2

            Button:
                text: "Music"
            Button:
                text: "Movies"
            Button:
                text: "Podcasts"
            Button:
                text: "TV Shows"